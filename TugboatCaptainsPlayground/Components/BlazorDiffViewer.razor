@using Common.Models
@using CSharpDiff.Patches.Models
@using CSharpDiff.Diffs.Models

@typeparam TItem where TItem : IDiffResult

@if (Diff?.Patch != null)
{
    <div class="blazor-diff-viewer">
        <div class="d2h-file-wrapper">
            <div class="d2h-file-header">
                <span class="d2h-file-name-wrapper">
                    <span class="d2h-file-name">@Diff.Patch.OldFileName â†” @Diff.Patch.NewFileName</span>
                </span>
            </div>
            <div class="d2h-files-diff">
                <div class="d2h-file-side-diff">
                    <div class="d-flex justify-content-end mb-2">
                        @LeftButtons
                    </div>
                    <div class="d2h-code-wrapper">
                        <table class="d2h-diff-table">
                            <tbody class="d2h-diff-tbody">
                                @foreach (var hunk in Diff.Patch.Hunks)
                                {
                                    <tr class="d2h-info">
                                        <td colspan="2">@@ -@hunk.oldStart,@hunk.oldLines +@hunk.newStart,@hunk.newLines @@</td>
                                    </tr>
                                    @foreach (var line in hunk.lines)
                                    {
                                        <tr class="@(line.StartsWith("+") ? "d2h-added" : line.StartsWith("-") ? "d2h-removed" : "d2h-cntx")">
                                            <td class="d2h-code-side-linenumber d2h-cntx"></td>
                                            <td class="d2h-cntx">
                                                <div class="d2h-code-side-line">@line</div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div>No diff content to display.</div>
}

@code {
    [Parameter]
    public IDiffResult Diff { get; set; }

    [Parameter]
    public string SourceEnv { get; set; }

    [Parameter]
    public string TargetEnv { get; set; }

    [Parameter]
    public RenderFragment<IDiffResult> LeftButtons { get; set; }

    [Parameter]
    public RenderFragment<IDiffResult> RightButtons { get; set; }
}

<style>
