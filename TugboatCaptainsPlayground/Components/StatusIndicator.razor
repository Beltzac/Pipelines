@code {
    [Parameter]
    public Status CurrentStatus { get; set; }

    public enum Status
    {
        Working,
        Error,
        Success,
        Unknown,
        None
    }

    private string GetStatusText(Status status) => status switch
    {
        Status.Working => "Em Execução",
        Status.Error => "Erro",
        Status.Success => "Sucesso",
        Status.Unknown => "Desconhecido",
        Status.None => "Inativo",
        _ => status.ToString()
    };
}

<div class="status-indicator @(CurrentStatus.ToString().ToLower())">
    <div class="indicator-icon"></div>
    <div class="indicator-text">@GetStatusText(CurrentStatus)</div>
</div>

<style>
    .status-indicator {
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        font-family: 'Courier New', Courier, monospace;
        text-transform: uppercase;
        color: #fff;
        font-size: 0.8rem;
        text-align: center;
        transition: background 0.5s ease-in-out, transform 0.5s ease-in-out;
        width: 60px;
        cursor: pointer;
        vertical-align: middle;
    }

    .indicator-icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin-bottom: 0.5rem;
    }

    .working .indicator-icon {
        background: #ffff00;
        animation: bounce 300ms alternate infinite cubic-bezier(.2, .65, .6, 1);
    }

    .error .indicator-icon {
        background: linear-gradient(45deg, #ff4d4d, #cc0000);
        animation: flash 700ms infinite ease-in-out;
    }

    .success .indicator-icon {
        background: linear-gradient(45deg, #00ff00, #006600);
        animation: none;
    }

    .unknown .indicator-icon {
        background: linear-gradient(45deg, #800080, #9932CC);
        animation: spin 2s infinite linear;
    }

    /* Implementing the 'None' status */
    .none .indicator-icon {
        background: #cccccc; /* Gray color to indicate 'None' */
        animation: none;
    }

    @@keyframes bounce {
        from {
            transform: translateY(0px);
        }
        to {
            transform: translateY(-10px);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.2);
        }
        100% {
            transform: scale(1);
        }
    }

    @@keyframes flash {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.3;
        }
        100% {
            opacity: 1;
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    .status-indicator:hover .indicator-text {
        display: block;
    }

    .indicator-text {
        display: none;
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.75);
        padding: 5px 10px;
        border-radius: 5px;
        white-space: nowrap;
        color: #fff;
        z-index: 1;
    }
</style>
